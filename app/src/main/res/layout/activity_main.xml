<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_500"
    tools:context=".MainActivity">

    <com.example.customviewclock.MyClockView
        android:id="@+id/myClockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clockRadius="380dp"
        app:clockWiseColor="@color/red_600"
        app:brandName="Gucci"
        app:backColor="@color/yellow_300"
        app:clockWiseSize="10dp"
        app:mainColor="@color/black"
        app:borderWidth="20dp"
        app:brandSize="10sp"
        app:circleCenterRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>